{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": false,
    "ignore": []
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "useAnchorContent": "off",
        "useValidAnchor": "off",
        "noRedundantAlt": "off",
        "noSvgWithoutTitle": "off"
      },
      "correctness": {
        "noUnusedImports": {
          "fix": "unsafe",
          "level": "error"
        }
      },
      "nursery": {
        "useSortedClasses": {
          "level": "error",
          "fix": "safe",
          "options": {}
        },
        "noRestrictedImports": {
          "level": "error",
          "options": {
            "paths": {
              "clsx": "Use `cn` instead"
            }
          }
        }
      },
      "style": {
        "noNonNullAssertion": "off",
        "useSelfClosingElements": {
          "level": "error",
          "fix": "safe"
        }
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double"
    }
  }
}
